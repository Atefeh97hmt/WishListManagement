}

<h2>GetWishListItemsList</h2>

<p>
    @Html.ActionLink("Create New", "CreateWishList")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.WishListItemDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoughPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Priority)
        </th>
